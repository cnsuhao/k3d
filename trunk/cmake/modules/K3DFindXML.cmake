set(K3D_XML_FOUND 0)

find_package(EXPAT)
if(EXPAT_FOUND)
	add_definitions(-DK3D_HAVE_EXPAT)
	set(K3D_XML_INCLUDE_DIR ${EXPAT_INCLUDE_DIRS})
	set(K3D_XML_LIB ${EXPAT_LIBRARIES})
	set(K3D_XML_FOUND 1)
else(EXPAT_FOUND)
	find_package(LibXml2)
	if(LIBXML2_FOUND)
		add_definitions(-DK3D_HAVE_LIBXML2)
		set(K3D_XML_INCLUDE_DIR ${LIBXML2_INCLUDE_DIR})
		set(K3D_XML_LIB ${LIBXML2_LIBRARIES})
		set(K3D_XML_FOUND 1)
	endif(LIBXML2_FOUND)
endif(EXPAT_FOUND)
